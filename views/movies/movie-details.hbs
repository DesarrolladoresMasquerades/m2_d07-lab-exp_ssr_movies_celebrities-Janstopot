<h1>{{title}} </h1>

<div>Genre: <br> {{genre}} </div>

<br>

<div>Plot: <br> {{plot}} </div>
<br>
<h4>Cast:</h4>
<ul>
    {{#each cast}}
    
    <h3>{{name}}</h3> 
    <li>Occupation: {{occupation}} </li>
    <li>Catch-phrase: {{catchPhrase}} </li>
<hr>
    {{/each}}

</ul>

<form action="/movies/{{this._id}}/delete" method="POST">
<button type="submit">Delete Movie</button>
</form>

<form action="/movies/{{this._id}}/edit" method="GET">
<button type="submit">Edit Movie</button>
</form>

